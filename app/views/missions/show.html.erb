<div class="callout">
  <h1>Selected Mission</h1>
  <i class="fa fa-chevron-left">
    <%= link_to 'Back to All Missions', missions_path %>
  </i>

  <div class="callout">
    <h3><%= @mission.title %></h3>
    <p><%= @mission.description %></p>
    <p>Submitted by: <%= link_to @mission.user.full_name, @mission.user %></p>
    <p>Submitted at: <%= @mission.created_at.strftime("%B %e, %Y") %></p>
  </div>

  <% if current_user.admin? || current_user == @mission.user %>
    <h5><%= link_to 'Edit this Mission', edit_mission_path %></h5>
    <h5><%= link_to 'Delete this Mission', @mission, method: :delete, data: { confirm: 'Are you sure you want to delete this mission?' } %></h5>
  <% end %>
</div>
